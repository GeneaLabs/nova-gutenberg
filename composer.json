{
    "name": "genealabs/nova-gutenberg",
    "description": "Implementation of the Gutenberg editor as a Laravel Nova Field based on Laraberg.",
    "keywords": [
        "laraberg",
        "laravel",
        "nova"
    ],
    "license": "MIT",
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "require": {
        "cweagans/composer-patches": "^1.6",
        "laravel/nova": "^3.0",
        "symfony/thanks": "^1.2",
        "unisharp/laravel-filemanager": "^2.0",
        "van-ons/laraberg": "^1.1"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.0",
        "phpmd/phpmd": "^2.8",
        "phpstan/phpstan": "^0.12.33",
        "sebastian/phpcpd": "^5.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "GeneaLabs\\NovaGutenberg\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "GeneaLabs\\NovaGutenberg\\FieldServiceProvider"
            ]
        },
        "patches": {
            "van-ons/laraberg": {
                "PR #110: Fix z-index of block popups.": "https://patch-diff.githubusercontent.com/raw/VanOns/laraberg/pull/110.diff"
            }
        }
    },
    "scripts": {
        "post-update-cmd": [
            "sed -i 's/\\/\\/\\# sourceMappingURL=laraberg.js.map//g' ./dist/js/laraberg.js",
            "sed -i 's/\\/\\*\\# sourceMappingURL=laraberg.css.map\\*\\///g' ./dist/css/laraberg.css"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
