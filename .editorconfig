# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js,php,vue}]
charset = utf-8

[*.php]
indent_style = space
indent_size = 4

[resources/{**.js,**.vue}]
indent_style = space
indent_size = 4

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
